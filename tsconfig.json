{
  "compilerOptions": {
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "lib": [
      "ESNext",
      "dom"
    ],
    "declaration": true,
    "module": "commonjs",
    "target": "ESNext",
    "removeComments": false,
    "experimentalDecorators": true,
    "preserveConstEnums": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "sourceMap": true,
    "declarationDir": "./dist"
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "test/**/*",
    "node_modules"
  ]
}
